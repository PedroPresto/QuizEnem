<?xml version='1.0' encoding='UTF-8' ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <!--
      Configuração mínima do DispatcherServlet.
      Como seus servlets usam a anotação @WebServlet (padrão do Java EE)
      em vez de @Controller (padrão do Spring MVC), não precisamos que o Spring
      procure por controllers. Deixamos apenas o ViewResolver, que ajuda o
      Spring a encontrar suas páginas JSP caso algum controller do Spring
      seja adicionado no futuro.
    -->

    <!--
      Configuração do ViewResolver.
      Isso diz ao Spring que suas páginas JSP estão na pasta /WEB-INF/jsp/
      e terminam com .jsp.
    -->
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

</beans>
